<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewAcountFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView

        android:id="@+id/textView_fragment_new_acount_nueva_cuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp"
        android:textSize="@dimen/Titulos"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="@string/textView_fragment_new_acount_nueva_cuenta"

        />
    <com.google.android.material.textfield.TextInputLayout

        android:id="@+id/textInputLayout_fragment_new_acount_correo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_fragment_new_acount_nueva_cuenta"
        app:layout_constraintBottom_toTopOf="@+id/button_fragment_new_acount_crear_cuenta"
        android:layout_marginHorizontal="@dimen/margin_horizontal"
        app:layout_constraintVertical_chainStyle="packed"
        android:hint="@string/textInputLayout_fragment_login_correo"
        app:hintTextColor="@color/black"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>



    <Button
        android:id="@+id/button_fragment_new_acount_crear_cuenta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout_fragment_new_acount_correo"
        android:layout_marginHorizontal="@dimen/margin_horizontal"
        android:layout_marginTop="10dp"
        android:text="@string/button_fragment_new_acount_crear_cuenta"
        />

</androidx.constraintlayout.widget.ConstraintLayout>